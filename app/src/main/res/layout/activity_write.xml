<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kim0420.ddukbbokki7566.WriteActivity"
    android:background="#4488ccac">


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#aaffffff"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <EditText
            android:id="@+id/et_title_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="제목"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>

        <LinearLayout
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="4dp"
            android:orientation="vertical">



            <LinearLayout
                android:background="#00ffffff"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#ccffffff"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="16dp">
                    <TextView
                        android:id="@+id/tv_title_write"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:layout_marginRight="16dp"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#aaffffff"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp">
                    <TextView
                        android:id="@+id/tv_date_write"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"/>


                </android.support.v7.widget.CardView>



            </LinearLayout>

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="#aaffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tv_addr_write"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    />

            </android.support.v7.widget.CardView>


        </LinearLayout>



    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#aaffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_weight="20"
        android:layout_margin="4dp">

        <EditText
            android:id="@+id/et_content_write"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_write"
        android:background="#acffffff"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="작성"
        android:layout_margin="4dp"
        android:layout_gravity="right"
        android:gravity="center"
        />


</LinearLayout>
