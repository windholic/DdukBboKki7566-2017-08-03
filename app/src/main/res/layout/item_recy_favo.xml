<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#c082b2c5"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_favo_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="abcdefr"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#c0ffffff"
                    android:textSize="24sp"
                    android:layout_margin="4dp"
                    android:layout_marginLeft="16dp"
                    />

                <TextView
                    android:id="@+id/tv_favo_pnum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#c0ffffff"
                    android:gravity="center_vertical"
                    android:text="012-1234-1234"
                    android:layout_margin="4dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="20sp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#f082b2c5"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/btn_fav_call"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/fbtn1"/>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#f082b2c5"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/btn_fav_fav"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/fbtn2f"/>
                </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#f082b2c5"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/btn_fav_com"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/fbtn3"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#f082b2c5"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/btn_fav_nav"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/fbtn4"/>
                </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>










        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_recyitem_favo"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:hint="한 줄 코멘트"
                android:inputType="text"
                android:textSize="16sp"
                android:textColorHint="#000000"
                />
            <Button
                android:id="@+id/btn_recyitem_favo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="편집"/>





        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>